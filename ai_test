<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <title>Test - Umělá inteligence pro každého</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; max-width: 800px; margin: auto; }
    h2 { color: #333; }
    .question { margin-bottom: 20px; }
    .question-title { font-weight: bold; margin-bottom: 10px; }
    button { padding: 10px 20px; font-size: 16px; cursor: pointer; }
    .result { font-weight: bold; margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Test: Umělá inteligence pro každého</h1>
  <form id="quizForm">
    <!-- Questions will be inserted here by JS -->
  </form>
  <button onclick="evaluateQuiz()">Vyhodnotit</button>
  <div class="result" id="result"></div>

  <script>
    const questions = [
      {
        question: "Co znamená zkratka LLM v kontextu AI?",
        options: ["Local Learning Method", "Large Language Model", "Logical Layered Matrix", "Linguistic Learning Mode"],
        answer: 1
      },
      {
        question: "Na co se LLM typicky nejlépe hodí?",
        options: ["Vedení účetnictví", "Tvorbu obrázků", "Psaní, čtení a konverzaci", "Přesné výpočty v matematice"],
        answer: 2
      },
      {
        question: "Která vlastnost NEpatří mezi silné stránky jazykových modelů?",
        options: ["Vysvětlování krok po kroku", "Tvorba struktury přednášky", "Složité matematické výpočty", "Úprava textů pro cílovou skupinu"],
        answer: 2
      },
      {
        question: "Co je to 'prompt engineering'?",
        options: ["Proces učení se AI novým dovednostem", "Tvorba algoritmů pro rychlejší výpočet", "Umění zadat kvalitní vstupní dotaz pro LLM", "Práce na hardware AI modelů"],
        answer: 2
      },
      {
        question: "Jaký je doporučený přístup při zadávání komplexních úkolů LLM?",
        options: ["Zadávat vše v jednom promptu", "Rozdělit úkol na menší části", "Nechat model hádat, co má dělat", "Vždy použít matematické zadání"],
        answer: 1
      },
      {
        question: "Který jazyk přináší obecně lepší výsledky při komunikaci s LLM?",
        options: ["Čeština", "Francouzština", "Němčina", "Angličtina"],
        answer: 3
      },
      {
        question: "Jaký přístup je doporučený při práci s výstupy LLM?",
        options: ["Spokojit se s prvním výstupem", "Vždy generovat více variant a vybírat", "Nepřekládat texty do jiných jazyků", "Požádat o výstup jen jednou"],
        answer: 1
      },
      {
        question: "K čemu může AI pomoci podle prezentace?",
        options: ["Výhradně ve vývoji softwaru", "Pouze v akademických výzkumech", "V běžném životě, například při plánování dovolené", "Jen při programování"],
        answer: 2
      },
      {
        question: "Jak lze zlepšit kvalitu výstupu od LLM?",
        options: ["Psát dotazy stručně", "Neposkytovat žádný kontext", "Přidat co nejvíce kontextu", "Vyhýbat se angličtině"],
        answer: 2
      },
      {
        question: "Co je doporučeno při žádosti o generování promptu od LLM?",
        options: ["Vždy si prompt napsat sám", "Požádat LLM, aby prompt samo navrhlo", "Používat předdefinované šablony", "Nezadávat konkrétní cíle"],
        answer: 1
      }
    ];

    const quizForm = document.getElementById("quizForm");
    questions.forEach((q, i) => {
      const div = document.createElement("div");
      div.className = "question";
      div.innerHTML = `<div class="question-title">${i + 1}. ${q.question}</div>` +
        q.options.map((opt, j) => `
          <label>
            <input type="radio" name="q${i}" value="${j}"> ${opt}
          </label><br>
        `).join("");
      quizForm.appendChild(div);
    });

    function evaluateQuiz() {
      let score = 0;
      questions.forEach((q, i) => {
        const selected = document.querySelector(`input[name=q${i}]:checked`);
        if (selected && parseInt(selected.value) === q.answer) {
          score++;
        }
      });
      document.getElementById("result").textContent = `Správně zodpovězeno: ${score} z ${questions.length}`;
    }
  </script>
</body>
</html>
